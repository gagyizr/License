<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentInterface">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/childNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Gyerek Neve" />

        <Button
            android:id="@+id/logParentSelectChildButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="GYEREK\nKIVÁlasztása" />

        <Button
            android:id="@+id/logParentDiaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Oktató\nNaplója" />

        <Button
            android:id="@+id/logParentFeladatok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Feladatok" />

        <Button
            android:id="@+id/logParentStatisztika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Statisztika" />

        <Button
            android:id="@+id/logParentMitCsinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Mit Csinal" />

    </LinearLayout>

    <ListView
        android:id="@+id/logParentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>