<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcd77"
    tools:context=".ParentInterface">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/childNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Gyerek Neve" />


        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:backgroundTint="#77d3ff"
            android:textColor="#000000"
            android:id="@+id/logParentDiaryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Oktató\nNaplója" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:backgroundTint="#77d3ff"
            android:textColor="#000000"
            android:id="@+id/logParentFeladatok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Feladatok" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:backgroundTint="#77d3ff"
            android:textColor="#000000"
            android:id="@+id/logParentStatisztika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Statisztika" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:backgroundTint="#77d3ff"
            android:textColor="#000000"
            android:id="@+id/logParentMitCsinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Mit Csinal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/parentinterface1"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/logParentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>