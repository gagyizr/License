<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.gagyi.test.EducatorInterface">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addGameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Game" />

        <Button
            android:id="@+id/selectChildrenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select\nChild" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/names_listview"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/activities_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

        </ListView>

    </LinearLayout>

</LinearLayout>
